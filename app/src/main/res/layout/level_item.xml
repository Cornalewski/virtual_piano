<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerLevelItem"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_margin="8dp">

    <!-- 1) Fundo circular -->
    <ImageView
        android:id="@+id/imgLevelBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/circle_background_available"
        android:scaleType="centerCrop" />

    <!-- 2) Número do nível -->
    <TextView
        android:id="@+id/tvLevelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center" />

    <!-- 3) Ícones de estrelas ou coroa (inicialmente invisível) -->
    <ImageView
        android:id="@+id/imgStarsOrCrown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|end"
        android:visibility="gone"
        android:src="@drawable/ic_star_filled" />

    <!-- 4) Opcional: ícone de amigo -->
    <ImageView
        android:id="@+id/imgFriendBadge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="top|end"
        android:visibility="gone"
        android:src="@drawable/ic_launcher_background" />

</FrameLayout>
