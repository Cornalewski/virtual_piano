<!-- res/layout/popup_level_info.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp"
    android:padding="16dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da música -->
        <TextView
            android:id="@+id/tvPopupMusicName"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="NOME DA MÚSICA"
            android:textColor="@color/azul_escuro" />

        <!-- Botão principal “Jogar” -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPopupPlay"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOGAR"
            app:cornerRadius="8dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Botão secundário “Cancelar” -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPopupCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="CANCELAR"
            app:cornerRadius="8dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
