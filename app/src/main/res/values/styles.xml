<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- botão de tecla branca -->
    <style name="KeyButtonWhite" parent="Widget.MaterialComponents.Button">
        <!-- nosso selector customizado -->
        <item name="android:background">@drawable/key_selector</item>
        <!-- anula o tint vindo do tema -->
        <item name="backgroundTint">@null</item>
        <!-- mantém o ripple do Material -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <!-- cantos arredondados se quiser reforçar -->
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- botão de tecla preta -->
    <style name="KeyButtonBlack" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/key_sharp_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <!-- Tipografia customizada -->
    <style name="TextAppearance.LevelNumber" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.PopupTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/azul_escuro</item>
    </style>

</resources>